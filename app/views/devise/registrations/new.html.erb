<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

    <% resource.build_user_profile unless resource.user_profile %>
    <%= f.fields_for :user_profile do |ff| %>
      <div>
        <%= ff.label :name %><br />
        <%= ff.text_field :name %></div>
      <div>
        <%= ff.label :location %><br />
        <%= ff.text_field :location %></div>
      <div>
        <%= ff.label :birth_date %><br />
        <%= ff.date_select :birth_date, :start_year => 1908, :use_month_numbers => true, :order => [:day, :month, :year] %></div>
      <div>
        <%= ff.label :website %><br />
        <%= ff.text_field :website %></div>
    <% end %>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
