<h1>Listing links</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Url</th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.user_id %></td>
    <td><%= link.title %></td>
    <td><%= link.url %></td>
    <td><%= raw article.link_tag_list.map { |t| link_to t, link_tag_path(t) }.join(', ') %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path %>
