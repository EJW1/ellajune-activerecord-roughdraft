<%= form_for(setup_user(@user)) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
  <% end %>
      </ul>
    </div>

    <% resource.build_user_profile unless resource.user_profile %>
    <%= f.fields_for :user_profile do |ff| %>
      <div>
        <%= ff.label :name %><br />
        <%= ff.text_field :name %></div>
      <div>
        <%= ff.label :location %><br />
        <%= ff.text_field :location %></div>
      <div>
        <%= ff.label :birth_date %><br />
        <%= ff.date_select :birth_date, :start_year => 1908, :use_month_numbers => true, :order => [:day, :month, :year] %></div>
      <div>
        <%= ff.label :website %><br />
        <%= ff.text_field :website %></div>
      <div>
        <%= ff.label :interests_tag_list, "Interests (separated by commas)" %><br />
        <%= ff.text_field :interests_tag_list %></div>
    <% end %>
  </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
