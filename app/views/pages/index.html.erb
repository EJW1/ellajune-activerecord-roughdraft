<h2>EllaJune Homepage</h2>

<% if current_user.present? %>
  <%= link_to "Add a link", new_link_path %>
<% end %>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Url</th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.user_id %></td>
    <td><%= link.title %></td>
    <td><%= link.url %></td>
    <td><%= link.votes.count %></td>
    <td><%= link_to 'Comments', link %></td>
    <td><%= link_to '+1', votes_path(:vote => {:link_id => link.id}), :method => :post %></td>
  <%# TODO: Only show edit or destroy to the user that posted the link %>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>